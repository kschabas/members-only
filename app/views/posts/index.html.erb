<h1> Posts </h1>

<ul>
  <% @posts.each do |post|  %>
    <li>
      <%= link_to post.title, post %>
      <% if user_signed_in? %>
        <%= User.find(post.user_id).username %>
      <% end %>
    </li>
  <% end %>
</ul>

<p>
<%= link_to "New Post", new_post_path %>
</p>
<p>
<% if user_signed_in? %>
  <%= link_to "Log Out", destroy_user_session_path, data: {turbo_method: :delete} %>
<% else %>
  <%= link_to "Login", new_user_session_path %>
<% end %>
</p>
